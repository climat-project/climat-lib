{
  "definitions": {
    "Node": {
      "title": "Node",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "paramDefaults": {
          "type": "object",
          "patternProperties": {
            "\\w+": ".*"
          }
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(req|opt):(flag|arg):(\\w+)(:\\w)?(?::\\ *(.*))?$"
          }
        },
        "action": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "patternProperties": {
                "^.*$": {
                  "type": "object"
                },
                "template": {
                  "type": "string"
                }
              }
            }
          ]
        },
        "children": {
          "type": "array",
          "$recursiveRef": "#/definitions/Node"
        }
      },
      "required": [
        "name",
        "action"
      ]
    }
  },
  "$ref": "#/definitions/Node"
}